<!DOCTYPE html>
<html>
<head>
    <title>Fastcart Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 60px;
            transition: all 0.3s;
            z-index: 1000;
        }
        .sidebar.collapsed {
            margin-left: -250px;
        }
        .sidebar a {
            color: #bdc3c7;
            text-decoration: none;
            display: block;
            padding: 15px 20px;
            font-size: 16px;
        }
        .sidebar a:hover, .sidebar a.active {
            background-color: #34495e;
            color: #fff;
        }
        .sidebar .sidebar-header {
            display: flex;
            align-items: center;
            padding: 0 20px;
            margin-bottom: 20px;
        }
        .sidebar .sidebar-header img {
            width: 30px;
            margin-right: 10px;
        }
        .sidebar .sidebar-header h3 {
            color: #fff;
            margin: 0;
        }
        .content {
            margin-left: 250px;
            padding: 60px 20px 20px;
            transition: all 0.3s;
        }
        .content.expanded {
            margin-left: 0;
        }
        .navbar {
            background-color: #1a1a2e;
            padding: 10px 20px;
            position: fixed;
            width: 100%;
            z-index: 1001;
        }
        .toggle-sidebar {
            background: none;
            border: none;
            color: white;
            font-size: 20px;
            cursor: pointer;
            padding: 5px 10px;
        }
        .navbar .navbar-brand img {
            width: 30px;
            margin-right: 10px;
        }
        .navbar .navbar-right {
            display: flex;
            align-items: center;
        }
        .navbar .navbar-right .nav-item {
            margin-left: 20px;
            color: #fff;
        }
        .navbar .navbar-right .nav-item img {
            width: 30px;
            border-radius: 50%;
        }
        @media (max-width: 768px) {
            .sidebar {
                margin-left: -250px;
            }
            .sidebar.collapsed {
                margin-left: 0;
            }
            .content {
                margin-left: 0;
            }
            .content.expanded {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="d-flex align-items-center">
            <button class="toggle-sidebar me-2">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="/api/placeholder/30/30" alt="Fastcart Logo" width="30" height="30"/>
                <span class="text-white ms-2">fastcart</span>
            </a>
        </div>
        <div class="navbar-right">
            <div class="nav-item">
                <i class="fas fa-bell"></i>
            </div>
            <div class="nav-item d-flex align-items-center">
                <img src="/api/placeholder/30/30" alt="User Avatar" width="30" height="30"/>
                <span class="ms-2 d-none d-md-inline">Randhir kumar</span>
                <i class="fas fa-caret-down ms-2"></i>
            </div>
        </div>
    </nav>

    <div class="sidebar">
        <a class="active" href="#">
            <i class="fas fa-home"></i>
            <span class="ms-2">Dashboard</span>
        </a>
        <a href="#">
            <i class="fas fa-box"></i>
            <span class="ms-2">Orders</span>
            <span class="badge bg-secondary float-end">16</span>
        </a>
        <a href="#">
            <i class="fas fa-tag"></i>
            <span class="ms-2">Products</span>
        </a>
        <a href="#">
            <i class="fas fa-folder"></i>
            <span class="ms-2">Categories</span>
        </a>
        <a href="#">
            <i class="fas fa-users"></i>
            <span class="ms-2">Customers</span>
        </a>
        <a href="#">
            <i class="fas fa-chart-line"></i>
            <span class="ms-2">Reports</span>
        </a>
        <a href="#">
            <i class="fas fa-percent"></i>
            <span class="ms-2">Coupons</span>
        </a>
        <a href="#">
            <i class="fas fa-inbox"></i>
            <span class="ms-2">Inbox</span>
        </a>
    </div>

    <div class="content">
        <!-- <%- include('dashboard') %> -->
        <%- include('dashboard') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.querySelector('.toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content');

            toggleButton.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('expanded');
            });
        });
    </script>
</body>
</html>