<!-- views/partials/product-list.ejs -->

<div class="content flex-grow-1">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Products</h2>
    <div>
      <button class="btn btn-outline-primary me-2">Export</button>
      <button class="btn btn-primary">+ Add Product</button>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between mb-3">
        <div class="input-group" style="width: 300px">
          <button
            aria-expanded="false"
            class="btn btn-outline-secondary dropdown-toggle"
            data-bs-toggle="dropdown"
            type="button"
          >
            Filter
          </button>
          <input class="form-control" placeholder="Search..." type="text" />
        </div>
        <div>
          <button class="btn btn-outline-secondary me-2">
            <i class="fas fa-edit"> </i>
          </button>
          <button class="btn btn-outline-secondary">
            <i class="fas fa-trash"> </i>
          </button>
        </div>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>
              <input type="checkbox" />
            </th>
            <th>Product</th>
            <th>Inventory</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (products.length > 0) { %> <% products.forEach(product => { %>
          <tr>
            <td>
              <input type="checkbox" />
            </td>
            <td>
              <!-- Gambar bisa diabaikan dulu -->
              <div class="d-inline-block ms-2">
                <div><%= product.product_name %></div>
                <small class="text-muted"> Category </small>
                <!-- Tambahkan kategori jika diperlukan -->
              </div>
            </td>
            <td><%= product.qty_in_stock %> in stock</td>
            <td><%= product.status %></td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="4">No products available</td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between align-items-center">
        <nav>
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#"> 1 </a>
            </li>
            <li class="page-item active">
              <a class="page-link" href="#"> 2 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> 3 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> 4 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> 5 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> 6 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> ... </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#"> 24 </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">
                <i class="fas fa-chevron-right"> </i>
              </a>
            </li>
          </ul>
        </nav>
        <div>146 Results</div>
      </div>
    </div>
  </div>
</div>
